#!/usr/bin/env bash
DONE=0
if command -v betterlockscreen > /dev/null 2>&1; then
	lock=betterlockscreen
elif command -v i3lock		   > /dev/null 2>&1; then
	lock=i3lock
else
		echo No lock screen installed!
		exit 1
fi

for wallpaper in $HOME/.config/tim241/themes/$($HOME/.config/tim241/bin/theme get)/wallpaper/*; do
	if [ "$DONE" = "0" ]; then
		echo $wallpaper
		if [ "$lock" = "i3lock" ]; then
			$lock -i $wallpaper -t -u -f Noto-Mono
		elif [ "$lock" = "betterlockscreen" ]; then
			$lock -l
		fi
		DONE=1
	fi
done
