!! URxvt settings

!! Set perl folder to HOME/.config/urxvt/perl/
URxvt.perl-lib: 	HOME/.config/urxvt/perl/

!! Set font for urxvt
urxvt*font:			xft:mono:medium:size=8
urxvt*boldfont:		xft:mono:medium:size=8

!! Disable the scrollbar
urxvt.scrollBar: 	false

!! urvt extensions
URxvt.perl-ext-common: 	selection-to-clipboard,keyboard-select,resize-font,url-select

!! url-select
URxvt.urlLauncher:     	/usr/bin/xdg-open
URxvt.underlineURLs:   	true
URxvt.keysym.M-u:      	perl:url-select:select_next

!! keyboard select
URxvt.keysym.C-Escape: 	perl:keyboard-select:activate
URxvt.keysym.M-s: 		perl:keyboard-select:search
!! urxvt keybindings
URxvt.keysym.Control-Left:	\033[1;5D
URxvt.keysym.Control-Right:	\033[1;5C

