!! URxvt settings

!! Set perl folder to HOME/.config/urxvt/perl/
URxvt.perl-lib: HOME/.config/urxvt/perl/

!! Set powerline font for bash-it
urxvt*font:xft:Noto Mono:pixelsize=10
urxvt*boldfont:xft:Noto Mono:pixelsize=10

!! Disable the scrollbar
urxvt.scrollBar: false

!! urvt extensions
URxvt.perl-ext-common: selection-to-clipboard,resize-font

!! urxvt keybindings
URxvt.keysym.C-z:     resize-font:smaller
URxvt.keysym.C-x:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.Control-Left:	\033[1;5D
URxvt.keysym.Control-Right:	\033[1;5C

XTerm*font:xft:Noto Mono:pixelsize=10

