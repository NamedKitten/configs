IP=$1
TARGET_PORT=$3
IP_PORT=$2
HOSTNAME=$4
if [ "x$1" = "xkill" ]; then
	pkill ssh 
	exit 
fi
if [ $IP_PORT ] && [ $HOSTNAME ]; then
	ssh -f $IP -p $IP_PORT -L $TARGET_PORT:$HOSTNAME:$TARGET_PORT -N
else
	echo "Usage	: localport USER@HOST SSH_PORT TARGET_PORT HOSTNAME"
	echo "Example	: localport test@example.com 2222 9090 localhost"
	echo "Example	: localport kill"
fi
