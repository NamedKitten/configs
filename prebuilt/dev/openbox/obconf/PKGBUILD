pkgname=obconf
_pkgname=obconf
pkgver=2.0.4
pkgrel=4
pkgdesc='Openbox configuration tool'
arch=('i686' 'x86_64')
url='https://github.com/danakj/obconf'
license=('GPLv2')
provides=($_pkgname)
conflicts=($_pkgname)
replaces=(obconf)
depends=('openbox-patched')
source=("git+https://github.com/danakj/obconf.git")
md5sums=('SKIP')
prepare() {
    cd "${_pkgname}"
    ./bootstrap
}

build() {
    cd "${_pkgname}"
    ./configure --prefix="/usr"
    make
}

package() {
    cd "${_pkgname}"
    make prefix="$pkgdir/usr" install
}
